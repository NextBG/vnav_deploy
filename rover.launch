<launch>
    <!-- Rover -->
    <node name="rover_node" pkg="rosserial_arduino" type="serial_node.py" output="screen">
        <param name="port" value="/dev/rover"/>
        <param name="baud" value="115200"/>
    </node>

    <!-- Joystick -->
    <node name="joy_node" pkg="joy" type="joy_node" output="screen">
        <param name="autorepeat_rate" value="10"/>
    </node>

    <!-- Camera -->
    <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
        <rosparam file="config/camera.yaml" command="load" />
    </node>

    <!-- Realsense T265 - only position (x, y) from /camera/odom/sample -->
    <include file="$(find realsense2_camera)/launch/rs_t265.launch">
        <arg name="enable_pose" value="true"/>
        <arg name="enable_fisheye1" value="false"/>
        <arg name="enable_fisheye2" value="false"/>
        <arg name="publish_odom_tf" value="false"/>
    </include>


</launch>